<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.swanndolia.idleasciimmorpg">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginRegisterFirebase">
        <activity
            android:name=".interfaces.Register"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".interfaces.Login"
            android:exported="false" />
        <activity
            android:name=".interfaces.Menu"
            android:exported="true" />
        <activity
            android:name=".interfaces.Inventory"
            android:exported="false" />
        <activity
            android:name=".interfaces.CompareAndEquip"
            android:exported="false"/>
        <activity
            android:name=".interfaces.Explore"
            android:exported="false"/>
        <activity
            android:name=".interfaces.Fight"
            android:exported="false"/>
    </application>

</manifest>